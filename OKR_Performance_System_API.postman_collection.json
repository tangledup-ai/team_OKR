						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"newuser@example.com\",\n    \"name\": \"新用户\",\n    \"password\": \"newuser123\",\n    \"password_confirm\": \"newuser123\",\n    \"department\": \"software\",\n    \"role\": \"member\"\n}"
